*
  box-sizing: border-box

body
  color: #51565a
  os();

input:-moz-placeholder
  color: #51565a
  opacity: 1

input:focus:-moz-placeholder
  color: #51565a

input::-moz-placeholder
  color: #51565a
  opacity: 1

input:focus::-moz-placeholder
  color: #51565a

input:-ms-input-placeholder
  color: #51565a
  opacity: 1

input:focus:-ms-input-placeholder
  color: #51565a

input::-webkit-input-placeholder
  color: #51565a
  opacity: 1

input:focus::-webkit-input-placeholder
  color: #51565a

textarea:-moz-placeholder
  color: #51565a
  opacity: 1

textarea:focus:-moz-placeholder
  color: #51565a

textarea::-moz-placeholder
  color: #51565a
  opacity: 1

textarea:focus::-moz-placeholder
  color: #51565a

textarea:-ms-input-placeholder
  color: #000
  opacity: 1

textarea:focus:-ms-input-placeholder
  color: #51565a

textarea::-webkit-input-placeholder
  color: #51565a
  opacity: 1

textarea:focus::-webkit-input-placeholder
  color: #000

input[type="reset"]
  display: none

output
  padding: 0

button
  outline: none
  &:active, &:focus
    outline: none

p
  margin: 0
  padding: 0

li
  list-style: none

h1, h2, h3, h4, h5, h6, ul, ol
  margin: 0
  padding: 0

input
  border: none
  background: none
  outline: none

button, a
  border: none
  background: none
  outline: none
  text-decoration: none

body
  overflow-x: hidden

figure, figcaption
  padding: 0
  margin: 0
  display: block

time
  margin: 0
  padding: 0

dl, dt, dd
  margin: 0
  padding: 0

.disable-hover,
.disable-hover *
  pointer-events: none !important

textarea
  outline: none

.hide-block
  display: none

input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0 1000px #fff inset;
}

a, button
  cursor: pointer

.hidden-input
  display: none

.disable-hover,
.disable-hover * {
  pointer-events: none !important;
}

::-ms-clear
  display: none

h3
  margin: 0 !important

/* Change the white to any color*/
input:-webkit-autofill
  -webkit-box-shadow: 0 0 0 1000px white inset !important

button:disabled
  opacity: 0.65 !important
  background-color: #ccc !important

.md-input-placeholder
  overflow: hidden

.vh-align
  display: flex;
  align-items: center;
  justify-content: center;

h3 {
  font-size: 22px;
  margin: 10px 0 0;
}

.app {
  margin: 50px;
  font: 14px sans-serif;
}

.ib {
  display: inline-block;
}

.page {
  width: 80%;
}

.user {
  width: 20%;
  vertical-align: top;
}

.btn {
  border: none;
  border-radius: 2px;
  display: inline-block;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  outline: 0;
  padding: 0 2rem;
  text-transform: uppercase;
  vertical-align: middle;
  color: #fff;
  background-color: #6383a8;
  text-align: center;
  letter-spacing: .5px;
  transition: .2s ease-out;
  cursor: pointer;
}

.btn:hover {
  background-color: #6d8cb0
}